generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  article       String
  minimumCost   Float

  typeId        Int
  type          ProductType   @relation(fields: [typeId], references: [id])

  materialId    Int
  material      Material  @relation(fields: [materialId], references: [id])
}

model ProductType {
  id          Int      @id @default(autoincrement())
  name        String
  coefficient Float
  products    Product[]
}

model Material {
  id             Int      @id @default(autoincrement())
  name           String
  missingPercent Float
  products    Product[]
}

model ProductWorkshop {
  id              Int      @id @default(autoincrement())
  name            String
  productionTime  Float
  workshopId      Int
  workshop        Workshop @relation(fields: [workshopId], references: [id])
}

model Workshop {
  id              Int      @id @default(autoincrement())
  name            String
  type            String
  numberWorkers   Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  productWorkshop ProductWorkshop[]
}